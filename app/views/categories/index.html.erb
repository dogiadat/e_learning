<%= provide :title, "Category List" %>
<h1 class="center">Category List</h1>
<br>
<%= will_paginate %>
<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item">
      <div class="pull-left" style="font-size:20px;">
        <%= link_to category.name, admin_category_path(category) %>
      </div>
      <% if logged_in? %>
        <div class="">
          <%= form_tag lessons_path, method: :post do %>
            <%= hidden_field_tag "lesson[category_id]", category.id  %>
            <%= submit_tag "Start Lesson", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
