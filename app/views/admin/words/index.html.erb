<div class="panel panel-heading">
  <h1><%= "Word List" %></h1>
</div>
<div class="panel">
  <div class="form-inline center">
    <%= form_tag "", method: :get do %>
      <%= select_tag :by_category,
        options_from_collection_for_select(@categories, :id, :name, params[:by_category]),
          include_blank: t(".all"), class: "form-control" %>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<div class="panel panel-body col-md-4 col-md-offset-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= "Word" %></th>
        <th><%= "Mean" %></th>
        <th><%= "Action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.content %></td>
          <td>
            <% word.word_answers.each do |answer| %>
              <%= answer.content if answer.is_correct? %>
            <% end %>
          </td>
          <td>
            <%= link_to "Delete", [:admin, Category.find(word.category_id), word],
              method: :delete,
              data: { confirm: "Are your sure to delete this word" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @words %>
</div>
